
<div id="parallax-world-of-ugg">

<section>
  <div class="title">
       <h3>Welcome aboard on the</h3>
    <h1> <%= @yacht.name %></h1>
  </div>
</section>

<section>
    <% if @yacht.photo.present? %>
      <div class="parallax-one" style="background-image: url('<%= cl_image_path @yacht.photo %>');">
        <h2><%= @yacht.name %></h2>
      </div>
    <% else %>
      <div class="parallax-one" style="background-image: url('<%= image_path "yachtdefault", alt: "alttext" %>');">
       <h2><%= @yacht.name %></h2>
      </div>
    <% end %>
</section>

<section>
  <div class="block">
    <p><span class="first-character sc">I</span><span><%= @yacht.description %></span>
    </p>
    <p class="line-break margin-top-10"></p>
    <p class="margin-top-10">
  <span>Price per night:</span>
  <span><%= @yacht.price_per_day %>$</span>
  <span>Please contact the host of this yacht directly on their email address:</span>
  <%= @yacht.user.email %></p>
  <%= link_to "Back to list", yachts_path %>
  <% if policy(@yacht).edit? %>
  <%= link_to "Edit", edit_yacht_path(@yacht) %>
<% end %>
<% if policy(@yacht).destroy? %>
  <%= link_to "Delete", yacht_path(@yacht), method: "delete" %>
<% end %>
<%= link_to "Add review", new_yacht_review_path(@yacht) %>
<%= render "reviews/index" %>
  </div>


<%= link_to "Share your experience with us", new_yacht_review_path(@yacht) %>

</section>


<section class="flex-show">


  <%= render 'bookings/new' %>

<div
  id="map" class="parallax-two"
  style="
  height: 50vh;"
  data-markers="<%= @marker.to_json %>"
  data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
></div>

</section>
     <% if @yacht.photo.present? %>
        <div class="parallax-three" style="background-image: url('<%= cl_image_path @yacht.photo %>');">
        <h2><%= @yacht.name %></h2>
      <% else %>
          <div class="parallax-three" style="background-image: url('<%= image_path "yachtdefault", alt: "alttext" %>');">
        <h2><%= @yacht.name %></h2>
    </div>
    <% end %>
</section>
