<h1>Welcome aboard on the <%= @yacht.name %></h1>
  <%= @yacht.name %>
  <%= @yacht.description %>
  <%= @yacht.price_per_day %>
  <% if @yacht.photo.present? %>
    <%= cl_image_tag @yacht.photo, height: 300, width: 400, crop: :fill %>
  <% else %>
    <%= image_tag "yachtdefault", alt: "alttext" %>
  <% end %>
  <%= @yacht.user.email %>

<%= link_to "Back to list", yachts_path %>
<%= link_to "Book your cruise", new_yacht_booking_path(@yacht) %>

<% if policy(@yacht).edit? %>
  <%= link_to "Edit", edit_yacht_path(@yacht) %>
<% end %>
<% if policy(@yacht).destroy? %>
  <%= link_to "Delete", yacht_path(@yacht), method: "delete" %>
<% end %>

<div
  id="map"
  style="width: 100%;
  height: 600px;"
  data-markers="<%= @marker.to_json %>"
  data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
></div>


