<div class="background-form">
  <div id="container-host" class="formform">
    <h2 class="text-center logging-in form">Host your yacht</h2>
    <div class="row">
      <div class="col-xs-4 col-xs-offset-3">
        <%= simple_form_for(@yacht) do |f| %>
          <div class="form-inputs">
            <%= f.input :name %>
            <%= f.input :description %>
            <%= f.input :price_per_day %>
            <%= f.input :address %>
            <%= f.input :photo %>
            <%= f.input :photo_cache, as: :hidden %>
            <div class="form-actions">
              <%= f.button :submit, "Confirm your post", :class => "btn-yours button-center" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

