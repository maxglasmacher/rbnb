<div class="background-form">
  <div id="container-host" class="formform">
    <h2 class="text-center logging-in form">Share your experience</h2>
    <div class="row">
      <div class="col-xs-4 col-xs-offset-3">
        <%= simple_form_for([@yacht, @review]) do |f| %>
          <div class="form-inputs">
            <%= f.input :content %>
            <%= f.input :rating %>
            <div class="form-actions">
              <%= f.button :submit, "Share", :class => "btn-yours button-center" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
