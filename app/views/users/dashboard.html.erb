

<div id="parallax-world-of-ugg">


<section>
  <div class="title">
       <h3>Hi </h3>
    <h1><%= current_user.email%></h1>
  </div>
</section>


<section>




      <div class="parallax-one" style="background-image: url('https://images.unsplash.com/photo-1419032185395-8131e3576bbb?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=800&q=60');">
       <h2>Your Posts</h2>
      </div>

</section> <!--section one-->

<section>
  <div class="block">
      <div class="row row-dashboard">
        <% @hosted.each do |post| %>
          <div class="col-xs-12 col-md-6 ">
            <div class="big-card-dashboard">
              <% background_url = post.photo.present? ? cl_image_path(post.photo, height: 500, crop: :fit) :  image_path("yachtdefault.jpg") %>
              <div class="card-dashboard" style="background-image: url('<%= background_url %>')">
                <div class="">
                  <div class="square-dashboard">
                    <div class="card-body-dashboard">
                      <p> <%= post.name %></p>
                      <div class="info-dashboard">
                        <p><%= post.price_per_day %> $ per night</p>
                        <%= link_to "delete", yacht_path(post), method:"delete"  %>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
          </div>
        </div> <!-- closing col -->
        <%end %>
      </div> <!-- closing row -->
  </div> <!-- closing block -->

</section>


<section>

      <div class="parallax-one" style="background-image: url('https://images.unsplash.com/photo-1435527173128-983b87201f4d?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1400&q=60');">
       <h2>Your Bookings<h2>
      </div>

<section>
  <div class="title">
       <h3>Ready </h3>
    <h1>for your next vacation</h1>
  </div>
</section>
</section> <!--section one-->
<div class="block">
<h1>You have <%= @bookings.count %> bookings</h1>

    <!-- <div class="wrapper"> -->


<h2>Checkout:</h2>
<% @bookings.each do |booking| %>
<p>Cruise duration: <%= (booking.booking_start - booking.booking_end).abs.to_i %> days</p>
<p>Starting <%= booking.booking_start.strftime("%b %-d, %Y") %> until <%= booking.booking_end.strftime("%b %-d, %Y") %></p>
<p>Total price: <%= booking.yacht.price_per_day * (booking.booking_start - booking.booking_end).abs.to_i %>$</p>
<div class="btn btn-warning">Checkout</div>
<% end %>
</div>





